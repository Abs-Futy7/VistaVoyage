# Database
DATABASE_URL=postgresql://username:password@localhost:5432/vistavoyage

# JWT Settings
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Supabase
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-key

# Admin JWT Settings
ADMIN_JWT_SECRET_KEY=your-admin-secret-key
ADMIN_JWT_ALGORITHM=HS256
ADMIN_ACCESS_TOKEN_EXPIRE_MINUTES=60
ADMIN_REFRESH_TOKEN_EXPIRE_DAYS=7

# Default Admin
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@vistavoyage.com
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_FULL_NAME=System Administrator

# SMTP Email Settings (Required for OTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=VistaVoyage

# Note: For Gmail, you need to:
# 1. Enable 2-Factor Authentication
# 2. Generate an App Password
# 3. Use the App Password (not your regular password) in SMTP_PASSWORD
